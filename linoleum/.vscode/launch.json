{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // https://github.com/scalameta/metals-vscode?tab=readme-ov-file#via-a-launchjson-configuration
        {
            "type": "scala",
            "request": "launch",
            "name": "Debug Main",
            "mainClass": "es.ucm.fdi.demiourgoi.linoleum.ltlss.Main",
            "args": [],
            "jvmOptions": [
                "-Dcom.google.protobuf.use_unsafe_pre22_gencode"
            ],
            "env": {}
        },
        {
            "name": "Debug Current Pytest Test File",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/../lotrbot/.venv/bin/python",
            "cwd": "${workspaceFolder}/../lotrbot",
            "module": "pytest",
            "args": [
                "${file}",
                "-v",
                "--no-header",
                "--capture=no"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/../lotrbot",
                "LOTRBOT_ENV_FILE_PATH": "${userHome}/.lotrbot.env",
                "OTEL_EXPORTER_OTLP_ENDPOINT": "http://localhost:4318"
            },
        }
    ]
}