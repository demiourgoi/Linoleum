 op max : -> Nat .
 eq max = 10000 .

 op init : -> Sys .
 eq init = [c(0) | task(0) task(1) task(2), mtCTDB] *** Client 0, with three tasks
           [c(1) | task(3) task(4), mtCTDB]         *** Client 1, with two tasks
           *** loadBalancer                         *** Load balancer
           lapi                                     *** Luego API, initial counter for generating task IDs
